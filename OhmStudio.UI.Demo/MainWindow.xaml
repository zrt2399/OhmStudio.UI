<CustomChromeWindow x:Class="OhmStudio.UI.Demo.MainWindow"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:local="clr-namespace:OhmStudio.UI.Demo"
                    xmlns:control="http://OhmStudio.UI"
                    mc:Ignorable="d"
                    IsShowTitle="True"
                    IsShowIcon="True"
                    Icon="/icon.ico"
                    WindowStartupLocation="CenterScreen"
                    ResizeMode="CanResizeWithGrip"
                    UseLayoutRounding="True"
                    SnapsToDevicePixels="True"
                    Title="MainWindow"
                    Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DockingManager x:Name="dockingManager" >

            <LayoutRoot>
                <LayoutPanel Orientation="Horizontal">
                    <LayoutDocumentPaneGroup>
                        <LayoutDocumentPane  >
                            <LayoutDocument Title="Button">
                                <Button Click="Button_Click">123</Button>
                            </LayoutDocument>
                            <LayoutDocument Title="DataGrid">
                                <DataGrid></DataGrid>
                            </LayoutDocument>
                            <LayoutDocument Title="DateTimePicker">
                                <DateTimePicker HorizontalAlignment="Left" VerticalAlignment="Top"></DateTimePicker>
                            </LayoutDocument>
                            <LayoutDocument Title="SearchBar">
                                <control:SearchBar HorizontalAlignment="Left" VerticalAlignment="Top"></control:SearchBar>
                            </LayoutDocument>
                            <LayoutDocument Title="PasswordBoxControl">
                                <StackPanel  >
                                    <TextBox Width="200" Height="28">123</TextBox>
                                    <PasswordBox Width="200" Height="28"> </PasswordBox>
                                    <control:PasswordBoxControl Width="200" Height="28"></control:PasswordBoxControl>
                                    <control:PasswordBoxControl Name="ps" Width="200" Height="28"></control:PasswordBoxControl>
                                </StackPanel>

                            </LayoutDocument>
                            <LayoutDocument Title="ComboBox">
                                <ProgressBar Value="50"></ProgressBar>
                            </LayoutDocument>
                        </LayoutDocumentPane>
                    </LayoutDocumentPaneGroup>
                    <LayoutAnchorablePaneGroup DockWidth="Auto">
                        <LayoutAnchorablePane>
                            <LayoutAnchorable Title="ListView">
                                <ListView></ListView>
                            </LayoutAnchorable>
                        </LayoutAnchorablePane>
                    </LayoutAnchorablePaneGroup>
                </LayoutPanel>
            </LayoutRoot>
        </DockingManager>
        <StatusBar Grid.Row="1">
            <StatusBarItem>Ready</StatusBarItem>
        </StatusBar>
    </Grid>
</CustomChromeWindow> 