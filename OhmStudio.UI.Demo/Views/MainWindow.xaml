    <ChromeWindow.LeftWindowCommands>
        <ToolBarTray VerticalAlignment="Center">
            <ToolBar BandIndex="1" >
                <Button   ToolTip="新建项目" Content="1"/>
                <TextBox>新建项目</TextBox>
                <RadioButton>新建项目</RadioButton>
                <CheckBox>新建项目</CheckBox>
                <Button ToolTip="打开文件" Content="2"/>
                <Separator></Separator>
                <Button  ToolTip="保存当前文件" Content="3"/>
                <Separator></Separator>
                <Button  ToolTip="保存当前文件" Content="5"/>
            </ToolBar>
            <ToolBar BandIndex="2" >
                <Button   ToolTip="新建项目" Content="3"/>

                <Button ToolTip="打开文件" Content="4"/>
                <Separator></Separator>
                <Button  ToolTip="保存当前文件" Content="5"/>
                <Separator></Separator>
                <Button  ToolTip="保存当前文件" Content="5"/>
            </ToolBar>
        </ToolBarTray>
    </ChromeWindow.LeftWindowCommands>

    <ChromeWindow.RightWindowCommands>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" >
            <Border hc:BorderElement.Circular="False" IsHitTestVisible="False" VerticalAlignment="Center">
                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsActive,RelativeSource={RelativeSource AncestorType=Window}}" Value="True">
                                <Setter Property="Background" Value="{DynamicResource SystemColorsWindowPanel}" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <TextBlock Margin="4"
                           HorizontalAlignment="Center"
                           FontWeight="Bold"
                           Text="{Binding Title,RelativeSource={RelativeSource AncestorType=Window}}" >
                    <TextBlock.Style>
                        <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsActive,RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                                    <Setter Property="Foreground" Value="{DynamicResource EnvironmentMainWindowInactiveCaptionText}" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Border>
            <ComboBox TextBoxAttach.Title="字体大小："
                      ItemsSource="{Binding FontSizeList}"
                      SelectedItem="{Binding CurrentFontSize}"
                      Margin="6,0"/>
            <ComboBox TextBoxAttach.Title="字体："
                      ItemsSource="{Binding FontFamilyList}"
                      SelectedItem="{Binding CurrentFontFamily}"/>
            <ComboBox TextBoxAttach.Title="主题：" BorderAttach.CornerRadius="2"
                      DisplayMemberPath="Name"
                      Margin="6,0"
                      ItemsSource="{x:Static views:ThemeCollection.AllThemes}"
                      SelectedItem="{Binding CurrentTheme}"/>
            <Button Click="Button_Click_5">登录</Button>
        </StackPanel>

    </ChromeWindow.RightWindowCommands>

