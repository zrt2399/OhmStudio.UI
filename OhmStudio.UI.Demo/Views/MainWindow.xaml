              IsShowIcon="True"
              Icon="/icon.ico"
              WindowStartupLocation="CenterScreen"
              ResizeMode="CanResizeWithGrip"
              UseLayoutRounding="True"
              SnapsToDevicePixels="True"
              Title="{x:Static local:App.Name}"
              Height="720"
              Width="1280">

