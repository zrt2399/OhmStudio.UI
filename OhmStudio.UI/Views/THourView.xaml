<UserControl x:Class="OhmStudio.UI.Views.THourView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OhmStudio.UI.Views"
             xmlns:my="clr-namespace:OhmStudio.UI.Views"
             Loaded="UserControl_Loaded"
             mc:Ignorable="d"
             d:DesignHeight="250"
             d:DesignWidth="400">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/OhmStudio.UI;component/Theme/Control.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Border BorderBrush="#FF88C1F2" 
            BorderThickness="2">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="24"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Background="#FFAFCCF8">
                <TextBlock x:Name="tbTitle" 
                           Text="小    时"                            
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Foreground="White"/>
                <my:IconButton HorizontalAlignment="Right" 
                               Margin="4" 
                               x:Name="iBtnCloseView"
                Icon="/OhmStudio.UI;component/Images/close.png" 
                Click="iBtnCloseView_Click" />
            </Grid>
            <DataGrid Grid.Row="1"
                      CellStyle="{StaticResource GridCellStyle}"
                      AutoGenerateColumns="True" 
                      Name="dgHour"
                      SelectionMode="Single"
                      AlternationCount="2"
                      RowHeaderWidth="0"
                      CanUserAddRows="False"
                      VerticalAlignment="Top"
                      RowHeight="20"  
                      ColumnWidth="20"
                      FontSize="11"
                      SelectionUnit="Cell"
                      IsReadOnly="True" 
                      HeadersVisibility="Row"
                      Background="White"
                      BorderBrush="White"
                      HorizontalGridLinesBrush="#d2d2d2"
                      VerticalGridLinesBrush="#d2d2d2"             
                      SelectedCellsChanged="dgHour_SelectedCellsChanged"/>
        </Grid>
    </Border>
</UserControl>