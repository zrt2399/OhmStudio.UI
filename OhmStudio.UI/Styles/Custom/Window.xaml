    <Style x:Key="NormalWindowStyle" TargetType="Window">
        <Setter Property="MinHeight" Value="70"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Background" Value="{StaticResource WindowContentBackground}"/>
        <Setter Property="WindowStyle" Value="None"/>
        <Setter Property="AllowsTransparency" Value="True"/>
        <!--<EventSetter Event="Initialized" Handler="Window_Initialized"/>-->
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Window">
                    <!--Window替换为Grid-->
                    <Grid Background="Transparent">
                        <Grid.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.3"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Grid.Triggers>
                        <Grid Margin="2" Name="gridMain">
                            <Border Background="White" CornerRadius="2">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="0" Color="DarkGray"/>
                                </Border.Effect>
                            </Border>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="32"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- 内容区域 -->
                                <Border Name="bdContent" ClipToBounds="True" CornerRadius="0,0,2,2" BorderThickness="0,1,0,0" Background="{TemplateBinding Background}" Grid.Row="1" BorderBrush="{StaticResource DefaultBorderBrush}">
                                    <ContentPresenter/>
                                </Border>

                                <!-- 标题区域 -->
                                <Border Name="bdTitle" CornerRadius="2,2,0,0" BorderThickness="0,0,0,1" Background="{DynamicResource WindowTitleBackground}" BorderBrush="{DynamicResource WindowTitleBackground}">
                                    <Grid Margin="10,0,5,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock x:Name="txtTitle" Text="{TemplateBinding Title}" Grid.Column="1" FontSize="13" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="{StaticResource WindowTitleForeground}"/>

                                        <!-- 主窗体可以放置菜单 -->
                                        <ContentPresenter Name="menu" TextBlock.Foreground="White" Grid.Column="2" Content="{TemplateBinding Tag}" Margin="0,0,5,0"/>

                                        <!--最小化按钮-->
                                        <Button Name="btnMin" Style="{StaticResource WindowMinButtonStyle}" Grid.Column="3" Margin="0,0,5,0">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="Click">
                                                    <i:ChangePropertyAction PropertyName="WindowState" Value="Minimized" TargetObject="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=Window}}"/>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </Button>

                                        <!--还原按钮-->
                                        <Button Name="btnRestore" Style="{StaticResource WindowRestoreButtonStyle}" Grid.Column="4" Margin="0,0,5,0">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="Click">
                                                    <i:ChangePropertyAction PropertyName="WindowState" Value="Normal" TargetObject="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=Window}}"/>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </Button>

                                        <!--最大化按钮-->
                                        <Button Name="btnMax" Style="{StaticResource WindowMaxButtonStyle}" Grid.Column="4" Margin="0,0,5,0">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="Click">
                                                    <i:ChangePropertyAction PropertyName="WindowState" Value="Maximized" TargetObject="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=Window}}"/>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </Button>

                                        <!--关闭按钮-->
                                        <Button Style="{StaticResource WindowCloseButtonStyle}" Grid.Column="5">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="Click">
                                                    <i:CallMethodAction MethodName="Close" TargetObject="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=Window}}"/>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </Button>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Grid>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsActive" Value="False">
                            <Setter TargetName="txtTitle" Property="Foreground" Value="LightGray"/>
                            <Setter TargetName="menu" Property="TextBlock.Foreground" Value="LightGray"/>
                        </Trigger>
                        <Trigger Property="WindowState" Value="Maximized">
                            <Setter TargetName="btnMax" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="btnRestore" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="bdTitle" Property="CornerRadius" Value="0"/>
                            <Setter TargetName="bdContent" Property="CornerRadius" Value="0"/>
                            <Setter TargetName="gridMain" Property="Margin" Value="0"/>
                            <Setter Property="WindowChrome.WindowChrome">
                                <Setter.Value>
                                    <WindowChrome CaptionHeight="34" GlassFrameThickness="1" ResizeBorderThickness="5" UseAeroCaptionButtons="False"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="WindowState" Value="Normal">
                            <Setter TargetName="btnMax" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="btnRestore" Property="Visibility" Value="Collapsed"/>
                        </Trigger>
                        <Trigger Property="ResizeMode" Value="NoResize">
                            <Setter Property="Visibility" Value="Collapsed" TargetName="btnMin"/>
                            <Setter Property="Visibility" Value="Collapsed" TargetName="btnRestore"/>
                            <Setter Property="Visibility" Value="Collapsed" TargetName="btnMax"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Setter Property="WindowChrome.WindowChrome">
            <Setter.Value>
                <WindowChrome CaptionHeight="27" GlassFrameThickness="1" ResizeBorderThickness="5" CornerRadius="2" UseAeroCaptionButtons="False"/>
            </Setter.Value>
        </Setter>
    </Style>

