                                     attaches:TextBoxAttach.PlaceHolderIsHitTestVisible="{Binding Path=(attaches:TextBoxAttach.PlaceHolderIsHitTestVisible), RelativeSource={RelativeSource TemplatedParent}}"
                                     attaches:TextBoxAttach.PlaceHolderOpacity="{Binding Path=(attaches:TextBoxAttach.PlaceHolderOpacity), RelativeSource={RelativeSource TemplatedParent}}"
                                     attaches:TextBoxAttach.Title="{Binding Path=(attaches:TextBoxAttach.Title), RelativeSource={RelativeSource TemplatedParent}}"
                                     attaches:TextBoxAttach.TitleIsHitTestVisible="{Binding Path=(attaches:TextBoxAttach.TitleIsHitTestVisible), RelativeSource={RelativeSource TemplatedParent}}"
                                     attaches:TextBoxAttach.TitlePlacement="{Binding Path=(attaches:TextBoxAttach.TitlePlacement), RelativeSource={RelativeSource TemplatedParent}}"
                                     DockPanel.Dock="Left"
                                     IsReadOnly="{TemplateBinding IsReadOnly}"
                                     Text="{TemplateBinding FileName}"
                                     TextWrapping="{TemplateBinding TextWrapping}" />
